# Production environment template
# Copy this to .env.production and fill in your values

# Database Configuration
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/restaurant_reservation_db?retryWrites=true&w=majority
DATABASE_NAME=restaurant_reservation_db

# JWT Configuration
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-for-production-min-32-chars

# AI Services
GEMINI_API_KEY=your_google_gemini_api_key_here

# Email Service
SENDGRID_API_KEY=your_sendgrid_api_key_here

# CORS Configuration (update with your frontend domain)
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://www.your-domain.com

# Optional: Redis for caching (if you add it later)
# REDIS_URL=redis://redis:6379

# Optional: Logging level
LOG_LEVEL=INFO